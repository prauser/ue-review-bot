# EditorConfig â€” UE5 C++ Project
# Reference: https://editorconfig.org/

root = true

# C++ source files
[*.{cpp,h,inl}]
indent_style = tab
indent_size = 4
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Python scripts
[*.py]
indent_style = space
indent_size = 4
